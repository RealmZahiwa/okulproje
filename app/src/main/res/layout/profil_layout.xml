<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/profil_edit_username"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginTop="52dp"
        android:text="kullanıcı ismi"
        app:layout_constraintStart_toEndOf="@+id/profil_btn_kaydet"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profil_btn_kaydet"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="#"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/profil_list_konular"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"></ListView>

    <TextView
        android:id="@+id/profil_txt_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="40dp"
        android:text="Bu konuları çalışmalısın!"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/profil_list_konular"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="79dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />


</androidx.constraintlayout.widget.ConstraintLayout>